{
    "title": "Ruleset",
    "description": "A set of rules describing constraints on an XML document",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "rules": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "context": { "type": "string" }, 
                    "rule": { "type": "string" }, 
                    "paths": { "type": "array", "items": { "type": "string" } }, 
                    "condition": { "type": "string" }
                }
            }
        }
    }
}
