{
    "//iati-activity": {
        "atleast_one": {
            "cases": [
                { "paths": [ "reporting-org/@ref" ] },
                { "paths": [ "iati-identifier" ] },
                { "paths": [ "participating-org" ] },
                { "paths": [ "title" ] },
                { "paths": [ "description" ] },
                { "paths": [ "activity-date" ] },
                { "paths": [ "activity-date[@type='1' or @type='3']" ] },
                { "paths": [ "sector" ] },
                { "paths": [ "transaction" ] }
            ]
        },
        "date_order": {
            "cases": [
                { "less": "activity-date[@type='1']", "more": "activity-date[@type='2']" },
                { "less": "activity-date[@type='3']", "more": "activity-date[@type='4']" },
                { "less": "activity-date[@type='1']", "more": "NOW" },
                { "less": "activity-date[@type='2']", "more": "NOW" }
            ]
        },
        "regex_matches": {
            "cases": [
                { "regex": "[A-Za-z0-9\\-_:\\.]+",
                  "paths": [ "reporting-org/@ref", "iati-identifier" ] }
            ]
        },
        "startswith": {
            "cases": [
                { "start": "reporting-org/@ref",
                  "paths": ["iati-identifier"] }
            ]
        }
    },
    "//participating-org": {
        "atleast_one": {
            "cases": [
                { "paths": [ "@ref", "text()" ] }
            ]
        }
    },
    "//transaction": {
        "date_order": {
            "cases": [
                { "less": "transaction-date", "more": "NOW" },
                { "less": "value-date", "more": "NOW" }
            ]
        }
    },
    "//budget": {
        "atleast_one": {
            "cases": [
                { "paths": [ "period-start" ] },
                { "paths": [ "period-end" ] }
            ]
        }
    },
    "//planned-disbursement": {
        "atleast_one": {
            "cases": [
                { "paths": [ "period-start" ] }
            ]
        },
        "date_order": {
            "cases": [
                { "less": "period-start", "more": "period-end" }
            ]
        }
    },
    "//result/indicator/period": {
        "date_order": {
            "cases": [
                { "less": "period-start", "more": "period-end" }
            ]
        }
    }
}
