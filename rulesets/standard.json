{
    "//iati-activity": {
        "atleast_one": {
            "cases": [
                { "paths": [ "activity-date[@type='1' or @type='3']" ] },
                { "paths": [ "sector", "transaction/sector" ] }
            ]
        },
        "date_order": {
            "cases": [
                { "less": "activity-date[@type='1']", "more": "activity-date[@type='2']" },
                { "less": "activity-date[@type='3']", "more": "activity-date[@type='4']" },
                { "less": "activity-date[@type='3']", "more": "NOW" },
                { "less": "activity-date[@type='4']", "more": "NOW" }
            ]
        },
        "regex_matches": {
            "cases": [
                { "regex": "[A-Za-z0-9\\-_:\\.]+",
                  "paths": [ "reporting-org/@ref", "iati-identifier" ] }
            ]
        },
        "sum": {
            "cases": [ {
                "paths": [ "recipient-country/@percentage", "recipient-region/@percentage" ],
                "sum": 100
             } ]
        }
    },
    "//participating-org": {
        "atleast_one": {
            "cases": [
                { "paths": [ "@ref", "narrative" ] }
            ]
        }
    },
    "//transaction": {
        "date_order": {
            "cases": [
                { "less": "transaction-date", "more": "NOW" },
                { "less": "value-date", "more": "NOW" }
            ]
        }
    },
    "//planned-disbursement": {
        "date_order": {
            "cases": [
                { "less": "period-start", "more": "period-end" }
            ]
        }
    },
    "//budget": {
        "date_order": {
            "cases": [
                { "less": "period-start", "more": "period-end" }
            ]
        }
    },
    "//total-budget": {
        "date_order": {
            "cases": [
                { "less": "period-start", "more": "period-end" }
            ]
        }
    },
    "//recipient-country-budget": {
        "date_order": {
            "cases": [
                { "less": "period-start", "more": "period-end" }
            ]
        }
    },
    "//recipient-org-budget": {
        "date_order": {
            "cases": [
                { "less": "period-start", "more": "period-end" }
            ]
        }
    },
    "//result/indicator/period": {
        "date_order": {
            "cases": [
                { "less": "period-start", "more": "period-end" }
            ]
        }
    }
}
